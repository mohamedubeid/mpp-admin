<div class="post-single-wrapper axil-section-gap bg-color-white">
    
    
    <div id="sliderID" class="slider-area bg-color-white">
        <div class="axil-slide slider-style-1">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="slider-activation axil-slick-arrow mb--30">
                            <!-- Start Single Slide  -->
                            <!-- HERE THE IMAGE LIST -->
                            <!-- ../../uploads//memento-mori-1648554921774-416611506.jpg -->
                            <div class="content-block">
                                <!-- Start Post Thumbnail  -->
                                <div class="post-thumbnail">
                                    <a href="post-details.html">
                                        <!-- This image is observed via ID -->
                                        <img id="observe1" src="https://img.freepik.com/free-vector/elegant-black-friday-background-banner_1361-3577.jpg?w=1380&t=st=1663178087~exp=1663178687~hmac=63f6e277dad10d9951228a0afceab9c67fdce4d1919325e2bbcc8150db054253" alt="Post Images">
                                    </a>
                                </div>
                                <!-- End Post Thumbnail  -->
                            </div>
                            <!-- End Single Slide  -->
                            <div class="content-block">
                                <!-- Start Post Thumbnail  -->
                                <div class="post-thumbnail">
                                    <a href="post-details.html">
                                        <!-- This image is observed via ID -->
                                        <img id="observe2" src="https://img.freepik.com/free-vector/modern-black-friday-horizontal-banner-with-white-brush-stroke-background_1361-3703.jpg?w=1380&t=st=1663178047~exp=1663178647~hmac=89964bd93fc50866f9c110633fdab5cf0950138e1baa1538af1dccf57085b6a2" alt="Post Images">
                                    </a>
                                </div>
                                <!-- End Post Thumbnail  -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <!-- Start Banner Area -->
                <div class="banner banner-single-post post-formate post-layout pb--40">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                
                                <!-- Start Single Slide  -->
                                <div class="content-block">
                                    <!-- Start Post Content  -->
                                    <div class="post-content">
                                        <div class="post-cat">
                                            <div class="post-cat-list">
                                                <a class="hover-flip-item-wrapper" href="#">
                                                    <span class="hover-flip-item">
                                                        <span data-text="FEATURED POST"><%= post.title %>Hello worldHello worldHello worldHello worldHello worldHello worldHello worldHello worldHello worldHello worldHello worldHello worldHello worldHello world</span>
                                                    </span>
                                                </a>
                                            </div>
                                        </div>
                                        <h1 class="title"><%= post.title %></h1>
                                    </div>
                                    <!-- End Post Content  -->
                                </div>
                                <!-- End Single Slide  -->
                                
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Banner Area -->
                <!-- Start Blog Details  -->
                
                <div class="axil-post-details">
                    <figure class="wp-block-image alignwide text-center">
                        <img src="/uploads/<%= uploadsFolderPath %>/<%= post.banner_image %>" alt="Post Images">
                    </figure>
                    
                    

                    <%- post.description %>

                    <div class="tagcloud">
                        <% for (let category of categories) { %>
                            <a href="/<%= pathname %>/c/<%= category.url_slug %>" class="tag-item"><%= category.title %></a>
                        <% } %>
                    </div>
                </div>
                <!-- End Blog Details  -->
            </div>
        </div>
    </div>
</div>


